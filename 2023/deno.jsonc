{
  "imports": {
    "std/": "https://deno.land/std@0.208.0/"
  },
  "tasks": {
    // run with `deno task day 1`
    "day": "DEBUG=true deno run --allow-net=deno.land --allow-read --allow-env --watch lib/day.ts",

    // deno task init 03 # -> create 03/ folder with boilerplate files
    "init": "deno run --allow-read --allow-write lib/init.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
